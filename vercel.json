{
  "rewrites": [
    { "source": "/:path((?!api).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/send-access-codes",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/execute-voice-calls",
      "schedule": "*/5 * * * *"
    }
  ],
  "functions": {
    "api/test-recording-upload.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/process-transcription.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  }
}
